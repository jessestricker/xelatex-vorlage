{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "tectonic build",

      "type": "process",
      "command": "tectonic",
      "args": ["-X", "build", "-p"],
      "group": "build"
    },
    {
      "label": "latexmk build",

      "type": "process",
      "command": "latexmk",
      "args": [
        "-xelatex",
        "-halt-on-error",
        "-outdir=${workspaceFolder}/build/latexmk",
        "-cd",
        "${workspaceFolder}/src/index.tex"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
